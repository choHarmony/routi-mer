<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/timerbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_sheet_dialog_bar"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_timer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타이머 이름"
        android:textSize="18sp"
        android:textColor="@color/selectedGrey"
        android:fontFamily="@font/nanumsquare_bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerbar"
        app:drawableStartCompat="@drawable/icon_edit_size_edit" />

    <EditText
        android:id="@+id/edit_timer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="최대 20자 작성 가능"
        android:maxLength="20"
        android:maxLines="1"
        android:textSize="18sp"
        android:backgroundTint="@color/green3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_timer_title" />

    <TextView
        android:id="@+id/text_timer_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타이머 설명"
        android:textSize="18sp"
        android:textColor="@color/selectedGrey"
        android:fontFamily="@font/nanumsquare_bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_timer_title"
        app:drawableStartCompat="@drawable/icon_descripition_size_edit" />

    <EditText
        android:id="@+id/edit_timer_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="타이머의 간단한 설명을 입력해보세요."
        android:maxLines="1"
        android:textSize="18sp"
        android:backgroundTint="@color/green3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_timer_des" />

    <TextView
        android:id="@+id/text_timer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간 설정"
        android:textSize="18sp"
        android:textColor="@color/selectedGrey"
        android:fontFamily="@font/nanumsquare_bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_timer_des"
        app:drawableStartCompat="@drawable/icon_time_size_edit" />

    <EditText
        android:id="@+id/edit_timer_sec"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="18sp"
        android:backgroundTint="@color/green3"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_timer_time" />

    <TextView
        android:id="@+id/text_timer_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초, "
        android:textSize="18sp"
        android:textColor="@color/selectedGrey"
        android:fontFamily="@font/nanumsquare_bold"
        android:gravity="center"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toTopOf="@+id/edit_timer_sec"
        app:layout_constraintBottom_toBottomOf="@+id/edit_timer_sec"
        app:layout_constraintStart_toEndOf="@+id/edit_timer_sec" />

    <EditText
        android:id="@+id/edit_timer_set"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="18sp"
        android:backgroundTint="@color/green3"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/text_timer_sec"
        app:layout_constraintTop_toTopOf="@+id/text_timer_sec"
        app:layout_constraintBottom_toBottomOf="@+id/text_timer_sec" />

    <TextView
        android:id="@+id/text_timer_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="세트"
        android:textSize="18sp"
        android:textColor="@color/selectedGrey"
        android:fontFamily="@font/nanumsquare_bold"
        android:gravity="center"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toTopOf="@+id/edit_timer_set"
        app:layout_constraintBottom_toBottomOf="@+id/edit_timer_set"
        app:layout_constraintStart_toEndOf="@+id/edit_timer_set" />

    <TextView
        android:id="@+id/text_timer_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="효과음 설정"
        android:textSize="18sp"
        android:textColor="@color/selectedGrey"
        android:fontFamily="@font/nanumsquare_bold"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_timer_set"
        app:drawableStartCompat="@drawable/icon_music_edit_size" />

    <Button
        android:id="@+id/btn_one_set_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="1세트 끝났을 때 재생될 효과음"
        android:textColor="@color/grey"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="5dp"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/icon_arrow_down_size_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_timer_music" />

    <Button
        android:id="@+id/btn_full_set_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="세트가 완전히 끝났을 때 재생될 효과음"
        android:textColor="@color/grey"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="5dp"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/icon_arrow_down_size_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_one_set_music" />

    <Button
        android:id="@+id/btn_timer_add"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/nanumsquare_bold"
        android:background="@drawable/btn_dialog_round"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_timer_add_quit"
        app:layout_constraintTop_toBottomOf="@+id/btn_full_set_music" />

    <Button
        android:id="@+id/btn_timer_add_quit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/nanumsquare_bold"
        android:background="@drawable/btn_dialog_round"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_full_set_music"
        app:layout_constraintBottom_toTopOf="@id/view"
        app:layout_constraintStart_toEndOf="@+id/btn_timer_add" />

    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_timer_add_quit" />






</androidx.constraintlayout.widget.ConstraintLayout>